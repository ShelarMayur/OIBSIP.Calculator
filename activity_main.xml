<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:padding="10dp"
        android:text="@string/calculator"
        android:background="@color/black"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        />

        <TextView
            android:id="@+id/display"
            android:maxLength="15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="25dp"
            android:typeface="sans"
            android:textStyle="bold"
            android:layout_marginTop="110dp"
            android:textAlignment="viewEnd"
            android:textSize="40sp"
            android:textColor="@color/white"/>
        <GridLayout
            android:layout_gravity="bottom"
            android:background="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="5"
            >
            <Button
                android:id="@+id/C"
                android:onClick="btnClearClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:text="@string/c"
                android:textSize="36sp"
            />
            <Button
                android:id="@+id/modulo"
                android:onClick="btnModuloClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:text="@string/modulo"
                android:textSize="36sp"
                />
            <Button
                android:id="@+id/X"
                android:onClick="btnClearOneClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:text="@string/x"
                android:textSize="36sp"
                />
            <Button
                android:id="@+id/divide"
                android:onClick="btnDivideClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/teal_200"
                android:layout_margin="5dp"
                android:text="@string/divide"
                android:textSize="36sp"
                />

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:onClick="btnSevenClicked"
                android:layout_margin="5dp"
                android:text="@string/_7"
                android:textSize="36sp"
                />
            <Button
                android:id="@+id/eight"
                android:onClick="btnEightClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:text="@string/_8"
                android:textSize="36sp"
                />
            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:onClick="btnNineClicked"
                android:text="@string/_9"
                android:textSize="36sp"
                />
            <Button
                android:id="@+id/multiply"
                android:onClick="btnMultiplyClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/teal_200"
                android:layout_margin="5dp"
                android:text="@string/multiply"
                android:textSize="36sp"
                />

            <Button
                android:id="@+id/four"
                android:onClick="btnFourClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:text="@string/_4"
                android:textSize="36sp"
                />
            <Button
                android:id="@+id/five"
                android:onClick="btnFiveClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:text="@string/_5"
                android:textSize="36sp"
                />
            <Button
                android:id="@+id/six"
                android:onClick="btnSixClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:text="@string/_6"
                android:textSize="36sp"
                />
            <Button
                android:id="@+id/minus"
                android:onClick="btnMinusClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/teal_200"
                android:layout_margin="5dp"
                android:text="@string/minus"
                android:textSize="36sp"
                />
            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:onClick="btnOneClicked"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:text="@string/_1"
                android:textSize="36sp"
                />
            <Button
                android:id="@+id/two"
                android:onClick="btnTwoClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:text="@string/_2"
                android:textSize="36sp"
                />
            <Button
                android:id="@+id/three"
                android:onClick="btnThreeClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:text="@string/_3"
                android:textSize="36sp"
                />
            <Button
                android:id="@+id/plus"
                android:onClick="btnPlusClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/teal_200"
                android:layout_margin="5dp"
                android:text="@string/plus"
                android:textSize="36sp"
                />

            <Button
                android:id="@+id/double_zero"
                android:onClick="btnDoubleZeroClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:text="@string/_00"
                android:textSize="36sp"
                />
            <Button
                android:id="@+id/zero"
                android:onClick="btnZeroClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:text="@string/_0"
                android:textSize="36sp"
                />
            <Button
                android:id="@+id/point"
                android:onClick="btnPointClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:text="@string/point"
                android:textSize="36sp"
                />
            <Button
                android:id="@+id/equals"
                android:onClick="btnEqualsClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:textColor="@color/teal_200"
                android:layout_margin="5dp"
                android:text="@string/equals"
                android:textSize="36sp"
                />

        </GridLayout>

</LinearLayout>